1. users
- id: int8 (PK)
- name: text
- joined_at: timestamp (default: now())
- registered_at: timestamp (default: now())
- auth_status: text
- company_approval: text
- department: text
- position: text
- contact: text
- email: text
- association_role: text
- org_chart_id: text
- company_id: uuid
- company: json

2. companies
- id: uuid (PK, default: gen_random_uuid())
- ceo_name: text
- logo_url: text
- name: text
- industry: text
- address: text
- homepage_url: text
- approval_status: text
- created_at: timestamp
- members: jsonb
